generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  username      String        @unique
  email         String        @unique
  password      String
  role          Role          @default(USER)
  balance       Int           @default(0)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  payments      Payment[]
  inventory     Inventory[]
  spinHistory   SpinHistory[]
  gachaHistory  GachaHistory[]
}

model Item {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  rarityId      String        @db.ObjectId
  image         String
  createdAt     DateTime      @default(now())

  rarity        Rarity        @relation(fields: [rarityId], references: [id])
  inventory     Inventory[]
  spinHistory   SpinHistory[]
  gachaHistory  GachaHistory[]
}

model Rarity {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  color     String
  dropRate  Float
  order     Int

  items     Item[]
}

model Config {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  key         String   @unique
  value       String
  updatedAt   DateTime @updatedAt
}

model Payment {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  userId      String         @db.ObjectId
  amount      Int
  type        PaymentType
  status      PaymentStatus  @default(PENDING)
  proofImage  String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  user        User           @relation(fields: [userId], references: [id])
}

model Inventory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  itemId      String   @db.ObjectId
  obtainedAt  DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  item        Item     @relation(fields: [itemId], references: [id])
}

model SpinHistory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  itemId      String   @db.ObjectId
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  item        Item     @relation(fields: [itemId], references: [id])
}

model GachaHistory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  itemId      String   @db.ObjectId
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  item        Item     @relation(fields: [itemId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum PaymentType {
  SPIN
  GACHA
  TOPUP
}

enum PaymentStatus {
  PENDING
  VERIFIED
  REJECTED
}